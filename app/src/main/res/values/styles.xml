<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- activity_main.xml styles -->

    <style name="EmptyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/sixteen_dp</item>
    </style>

    <!-- list_item.xml styles-->

    <style name="ListItemRootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/sixteen_dp</item>
    </style>

    <style name="ProductNameTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="PriceAndQuantityLayouts">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PriceAndQuantityIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/colorIconsAndButtons</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PriceAndQuantityTextViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="SaleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@color/colorIconsAndButtons</item>
    </style>

    <!-- product_detail.xml styles -->

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditorMainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/sixteen_dp</item>
    </style>

    <style name="ProductNameLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ProductAttributeTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">@dimen/eight_dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ProductNameEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@color/colorEditBackground</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ProductAttributeLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/sixteen_dp</item>
    </style>

    <style name="PriceEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@color/colorEditBackground</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="QuantityLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="ChangeQuantityButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/sixteen_dp</item>
        <item name="android:paddingStart">@dimen/sixteen_dp</item>
        <item name="android:tint">@color/colorIconsAndButtons</item>
    </style>

    <style name="QuantityEditText">
        <item name="android:layout_width">@dimen/sixty_four</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/colorEditBackground</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DescriptionEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@color/colorEditBackground</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="SupplierRelativeLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="ContactImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginStart">@dimen/sixteen_dp</item>
        <item name="android:tint">@color/colorIconsAndButtons</item>
    </style>

    <style name="PhoneEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toStartOf">@id/image_phone</item>
        <item name="android:background">@color/colorEditBackground</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EmailEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toStartOf">@id/image_email</item>
        <item name="android:background">@color/colorEditBackground</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AddImageLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AddImageTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">@dimen/eight_dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="AddImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/colorIconsAndButtons</item>
        <item name="android:layout_marginTop">@dimen/eight_dp</item>
        <item name="android:layout_marginEnd">@dimen/eight_dp</item>
        <item name="android:padding">@dimen/twelve_dp</item>
    </style>

</resources>
